<main>
  <div id="map"></div>
  <script>
  var map = L.map('map').setView([48.4768, -123.5117], 10);

  var osm = L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
    attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
  }).addTo(map);
  var imageUrl = '/images/coverage/monkey-sparkles.png';
  var altText = 'Coverage from Monkey Sparkles';
  var latLngBounds = L.latLngBounds([[49.43115, -124.8365], [47.6325, -122.1204]]);

  var imageOverlay = L.imageOverlay(imageUrl, latLngBounds, {
      opacity: 0.8,
      alt: altText,
      interactive: true
  }).addTo(map);
  </script>
